    log('setCollectionConfig completed (admin)');
  } catch (e) {
    log('handleAdminSetCollectionConfig err', e && e.message ? e.message : e);
    alert('Admin set failed: ' + (e.message || e));
  } finally {
    hideLoading();
  }
}

